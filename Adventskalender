    <input type="text" id="code" placeholder="Code eingeben">
    <button onclick="checkCode()">Absenden</button>
    <p id="result"></p>

    <script>
        function checkCode() {
            const code = document.getElementById('code').value;
            if (code === "1234") {
                document.getElementById('result').textContent = "Richtig! Weiter so!";
            } else {
                document.getElementById('result').textContent = "Falscher Code, versuche es nochmal.";
            }
        }
    </script>
